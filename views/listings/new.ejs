<% layout("/layouts/boilerplate")%>

    <body>

        <div class="row mt-3">
            <div class="col-8 offset-1">
                <h2>Create a New Listing</h2>
                <form method="POST" action="/listings" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="title">Title</label>
                        <input class="form-control" name="listing[title]" placeholder="Enter title" type="text"
                            id="title" required />
                    </div>

                    <div class="mb-3">
                        <label for="description">Description</label>
                        <textarea class="form-control" rows="3" name="listing[description]"
                            placeholder="Enter description" id="description" required></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="image">Image URL</label>
                        <input class="form-control" name="listing[image]" placeholder="Enter image URL/Link" type="text"
                            id="image" />
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price"> Price</label>
                            <input class="form-control" name="listing[price]" placeholder="Enter price" type="number"
                                id="price" required />
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="country">Country</label>
                            <input class="form-control" name="listing[country]" placeholder="India" type="text"
                                id="country" required />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location">Location</label>
                        <input class="form-control" name="listing[location]" placeholder="Jaipur , Rajasrhan"
                            type="text" id="location" required />
                    </div>

                    <button class="btn btn-dark add-btn mb-3 mt-3">Add</button>
                </form>

            </div>
        </div>

    </body>