<% layout("/layouts/boilerplate")%>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-1">
                <h1>Edit Your Listing</h1>

                <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
                    <div class="mb-3">
                        <label for="title">Title</label>
                        <input class="form-control" name="listing[title]" value="<%= listing.title%>" type="text"
                            id="title">
                    </div>

                    <div class="mb-3">
                        <label for="description">Description</label>
                        <textarea class="form-control" name="listing[description]"
                            id="description"><%= listing.description%></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="image">Image URL</label>
                        <input class="form-control" name="listing[image]" value="<%= listing.image%>" type="text"
                            id="image">
                    </div>

                    <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price"> Price</label>
                        <input class="form-control" name="listing[price]" value="<%= listing.price%>" type="number"
                            id="price">
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country">Country</label>
                        <input class="form-control" name="listing[country]" value="<%= listing.country%>" type="text"
                            id="country">
                    </div>
                    </div>

                    <div class="mb-3">
                        <label for="location">Location</label>
                        <input class="form-control" name="listing[location]" value="<%= listing.location%>" type="text"
                            id="location">
                    </div>
                    <button class="btn btn-dark mt-3 mb-3 edit-btn">Edit</button>
            </div>
        </div>
        </form>


    </body>

    </html>